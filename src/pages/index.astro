<YapeDialog yapeImage="/yape-qr-code.png" />

<script>
  const yapeButton = document.getElementById("yape-button");
  const yapeDialog = document.getElementById("yape-dialog");
  const closeDialogButton = document.getElementById("close-dialog");
  const dialogContent = yapeDialog?.querySelector(".bg-white");

  function openDialog() {
    yapeDialog?.classList.remove("opacity-0", "pointer-events-none");
  }

  function closeDialog() {
    yapeDialog?.classList.add("opacity-0", "pointer-events-none");
  }

  function checkQueryParam() {
    const urlParams = new URLSearchParams(window.location.search);
    const openYapeDialog = urlParams.get("open-yape-dialog");

    if (openYapeDialog === "true") {
      openDialog();
    }
  }

  yapeButton?.addEventListener("click", openDialog);
  closeDialogButton?.addEventListener("click", closeDialog);

  yapeDialog?.addEventListener("click", (event) => {
    if (!dialogContent?.contains(event.target as Node)) {
      closeDialog();
    }
  });

  // Check for the query parameter when the page loads
  window.addEventListener("DOMContentLoaded", checkQueryParam);
</script>
